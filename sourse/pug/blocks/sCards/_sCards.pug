mixin sCards(data)
	// start sCards
	+b.SECTION.sCards.section#sCards&attributes(attributes)
		.container
			+b.section-title
				h2 Битрикс24
				
			.row
				.col-lg-4
					+cardItem('Купить лицензию Битрикс24','Коробочные и облачные решения Битрикс24 для Вашего бизнеса','Выбрать','cardImg-1')(style="background-color: #a1e6fc;")
				.col-lg-4
					+cardItem('Заказать внедрение Битрикс 24','Наши специалисты разработали свои решения в виде готовых «пакетов» услуг','Заказать','cardImg-2')(style="background-color: #befdf3;")
				.col-lg-4
					+cardItem('Возможности Битрикс24','Узнайте все возвожности Битрикс24','Узнать','cardImg-3')(style="background-color: #e0ecfe;")

mixin cardItem(title,text,btn,img,sl)
	+b.cardItem&attributes(attributes)
		.row
			+e.textCol.col-6
				+e.title!= title
				p.d-none.d-sm-block!= text
				+e.btnWrap
					+e.btn.btn.btn-primary.btn-primary-shadow-sm(href="#")= btn
			+e.picCol.col
				if sl
					picture
						source.swiper-lazy(srcset="#" data-srcset=`img/@2x/webp/${img}.webp` type="image/webp")
						img.swiper-lazy(src="#" data-src=`img/@2x/${img}.png`, alt="")
				else
					+pic(`${img}`,'','')
	// end sCards


mixin sCards-slider(data)
	// start sCards
	+b.SECTION.sCards--slider.section#sCards&attributes(attributes)
		.container
			+b.section-title
				h2 Популярные услуги
			+e.prevBtn.d-none.d-lg-flex
				+icon('arrow-r')
			+e.nextBtn.d-none.d-lg-flex
				+icon('arrow-r')
			.swiper-container.cardSlider
				.swiper-wrapper
					.swiper-slide
						+cardItem('Создание уникальных логотипов','Гибкие пакеты для разработки логотипа','Подробнее','cardSlider-1','sl')(style="background-color: #fadb88;")
					.swiper-slide
						+cardItem('Фирменный стиль для Вашего бизнеса','Разработка фирменного стиля является важной составляющей формирования имиджа вашей компании','Подробнее','cardSlider-2','sl')(style="background-color: #c7f4fa;")
					.swiper-slide
						+cardItem('Фирменный стиль для Вашего бизнеса','Разработка фирменного стиля является важной составляющей формирования имиджа вашей компании','Подробнее','cardSlider-2','sl')(style="background-color: #c7f4fa;")
