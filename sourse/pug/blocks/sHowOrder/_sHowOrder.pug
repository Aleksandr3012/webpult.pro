mixin item-circle(data)
	+b.item-circle
		+e.count 
			.pieProgress(role='progressbar' data-goal= data.size   data-step='2'  )
		+e.text!= data.p
			if data.alert
				span(data-alert= data.alert)
					+icon("question")
	// /.item-circle

mixin sHowOrderBody()
	// start sHowOrder
	+b.SECTION.sHowOrder.section#sHowOrder&attributes(attributes)
		.container
			block
	// end sHowOrder
	
