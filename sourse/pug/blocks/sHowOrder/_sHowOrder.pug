mixin sHowOrder-08(data)
	+sHowOrderBody(class="sHowOrder-tabs")
		+b.section-title.text-center
			h2 Как заказать сайт или интернет-магазин в&nbsp;рассрочку
		.tabs
			+b.tabs__caption--with-icon
				+b.tabs__btn--with-icon
					+icon("configuration")
