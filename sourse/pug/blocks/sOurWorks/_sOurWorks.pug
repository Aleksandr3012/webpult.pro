mixin sOurWorksItem(i,t, s)
	+e.col&attributes(attributes)
		if s
			+b.sOurWorks-item
				+e.DIV.img-wrap
					picture
						+img.swiper-lazy.res-i(src="#" data-src=`sOurWorks-img-${i}.png`, alt="")
				.h6!= t
		else
			+b.sOurWorks-item(href="#")
				+e.DIV.img-wrap
					+pic(`sOurWorks-img-${i}.png`,'','')
				.h6!= t

mixin sOurWorksBody(t, s)
	// start sOurWorks
	+b.SECTION.sOurWorks.section#sOurWorks
		.container
			+b.section-title
				.row
					.col
						h2!= t
					.col-xsm-auto
						if !s
							a.tdu(href="#") Перейти в портфолио  
								| 
								span 111
						else
							.control-wrap
								+arrow()
			if block
				block
			else
				.row
					+sOurWorksItem('im-1',`Интернет-магазин ротанговой мебели был разработан нами с&nbsp;нуля.`)(class="col-xl-3 col-sm-6")
					+sOurWorksItem('im-2',`Разработка интернет-магазина по&nbsp;продаже кирпича оптом и&nbsp;в&nbsp;розницу с&nbsp;нуля.`)(class="col-xl-3 col-sm-6")
					+sOurWorksItem('im-3',`Разработка интернет-магазина по&nbsp;продаже кирпича оптом и&nbsp;в&nbsp;розницу с&nbsp;нуля.`)(class="col-xl-3 col-sm-6")
					+sOurWorksItem('im-4',`Разработка интернет-магазина по&nbsp;продаже кирпича оптом и&nbsp;в&nbsp;розницу с&nbsp;нуля.`)(class="col-xl-3 col-sm-6")
	// end sOurWorks
mixin sOurWorks(data)
	+sOurWorksBody('Наши работы')

