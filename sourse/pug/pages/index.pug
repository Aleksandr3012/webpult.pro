extends layout/main.pug


include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sCards/_sCards.pug
include ../blocks/sBlog/_sBlog.pug
include ../blocks/sNumeral/_sNumeral.pug
include ../blocks/sCompetences/_sCompetences.pug
include ../blocks/sMission/_sMission.pug

block variables
	- let  mainPage= 'mainPage'
block title
	- let  title= 'webpult.pro'
	title= title
block pagecontent
	+header()
		+topLine()
	+headerBlock() 

			.gallery-thumbs.container 
				mixin slideThumb(t,e) 
					+b.slideThumb--js
						+e.text
							+e.title= t
							+e.descr= e
				+slideThumb('Корпоративные сайты','от 60 000 ₽ под ключ')
				+slideThumb('Интернет-магазины','от 160 000 ₽ под ключ')
				+slideThumb('Лендинг пейдж','от 60 000 ₽ с уникальным дизайном')
				+slideThumb('Сайты В рассрочку','от 3 000 ₽ в месяц')
		 
	+sCards()
	+sCards-slider()
	+sNumeral
	+sCompetences
	+sBlog('Блог','date')
	+sMission
	+footer()


	