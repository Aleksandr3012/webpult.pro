include ../blocks/sContent/_sContent.pug
include ../blocks/sContact/_sContact.pug
include ../blocks/sCards/_sCards.pug
include ../blocks/sBlog/_sBlog.pug
include ../blocks/sNumeral/_sNumeral.pug
include ../blocks/sCompetences/_sCompetences.pug
include ../blocks/sMission/_sMission.pug

block variables
	- let  mainPage= 'mainPage'
block title
	- let  title= 'О нас'
